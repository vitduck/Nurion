# Precompiler options
CPP_OPTIONS= -DHOST=\"knl-intel-lapack\" \
			 -DMPI \
			 -DLAPACK36 \
             -Davoidalloc \
			 -Duse_collective \
			 -Duse_shmem \
             -Dtbdyn  \
			 -DPROFILING

CPP        = fpp -f_com=no -free -w0 $*$(FUFFIX) $*$(SUFFIX) $(CPP_OPTIONS)

FC         = mpiifort
FCL        = mpiifort -lstdc++

FREE       = -free -names lowercase

FFLAGS     = -assume byterecl -w -qopenmp
OFLAG      = -Ofast -xMIC-AVX512
OFLAG_IN   = $(OFLAG)
DEBUG      = -O0

BLAS       = $(KISTI_APPLIB1)/$(CRAY_CPU_TARGET)/lapack/3.7.0/libblas.a
LAPACK     = $(KISTI_APPLIB1)/$(CRAY_CPU_TARGET)/lapack/3.7.0/liblapack.a
BLACS      = -lmkl_blacs_intelmpi_lp64
SCALAPACK  = -lmkl_scalapack_lp64 -lmkl_core -lmkl_intel_lp64 -lmkl_sequential
LLIBS      = -Wl,--start-group $(BLAS) $(LAPACK) -Wl,--end-group \
			 -L$(MKLROOT)/lib/intel64 $(BLACS) $(SCALAPACK)

OBJECTS    = fftmpiw.o fftmpi_map.o fftw3d.o fft3dlib.o 
INCS       =-I$(MKLROOT)/include/fftw

OBJECTS_O1 += fftw3d.o 
OBJECTS_O3 += fft3dlib.o fftmpiw.o

OFLAG_1    += -xMIC-AVX512
OFLAG_2    += -xMIC-AVX512
OFLAG_3     = -Ofast -xMIC-AVX512

# For what used to be vasp.5.lib
CPP_LIB    = $(CPP)
FC_LIB     = $(FC)
CC_LIB     = icc
CFLAGS_LIB = -O2
FFLAGS_LIB = -O2
FREE_LIB   = $(FREE)

OBJECTS_LIB= linpack_double.o getshmem.o

# For the parser library
CXX_PARS   = icpc

LIBS       += parser
LLIBS      += -Lparser -lparser -lstdc++

# Normally no need to change this
SRCDIR     = ../../src
BINDIR     = ../../bin

#================================================
# GPU Stuff

CPP_GPU    = -DCUDA_GPU -DRPROMU_CPROJ_OVERLAP -DUSE_PINNED_MEMORY -DCUFFT_MIN=28 -UscaLAPACK

OBJECTS_GPU = fftmpiw.o fftmpi_map.o fft3dlib.o fftw3d_gpu.o fftmpiw_gpu.o

CC         = icc
CXX        = icpc
CFLAGS     = -fPIC -DADD_ -Wall -openmp -DMAGMA_WITH_MKL -DMAGMA_SETAFFINITY -DGPUSHMEM=300 -DHAVE_CUBLAS

CUDA_ROOT  ?= /usr/local/cuda/
NVCC       := $(CUDA_ROOT)/bin/nvcc -ccbin=icc
CUDA_LIB   := -L$(CUDA_ROOT)/lib64 -lnvToolsExt -lcudart -lcuda -lcufft -lcublas

GENCODE_ARCH    := -gencode=arch=compute_30,code=\"sm_30,compute_30\" \
                   -gencode=arch=compute_35,code=\"sm_35,compute_35\" \
                   -gencode=arch=compute_60,code=\"sm_60,compute_60\"

MPI_INC    = $(I_MPI_ROOT)/include64/
